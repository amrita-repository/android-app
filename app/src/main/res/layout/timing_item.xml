<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:background="@color/colorBackground"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="56323 Coimbatore Mangalore Fast Passenger "
        android:id="@+id/name"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textColor="@color/orange"
        android:gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Departs from Coimbatore at 16:00 hours"
        android:id="@+id/departure"
        android:textColor="@android:color/white"
        android:layout_below="@+id/name"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Reaches Ettimadai at 17:30 hours"
        android:id="@+id/arrival"
        android:layout_below="@+id/departure"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Runs on All Days"
        android:id="@+id/days"
        android:textColor="@android:color/holo_orange_light"
        android:layout_below="@+id/arrival"
        android:layout_centerHorizontal="true" />

</RelativeLayout>